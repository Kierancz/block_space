<% provide(:title, @user.username) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
    <div class="col-md-4">
      <%= gravatar_for @user %>
    </div>
    <div class="col-md-8">
      <h1 style="margin: 6px"><b><%= @user.username %></b></h1>
      <h2 style="margin: 0px"><b><%= @user.email %></b></h2>
    </div>
  </div>
    <hr>
    <div class="row">
    <div class="col-md-4">
    	<center><h3><%= @user.spaces.count %><br>
    	<b><small>spaces</small></b></h3></center>
    </div>
    <div class="col-md-4">
    	<center><h3><%= @user.blocks.count %><br>
    	<b><small>Blocks</small></b></h3></center>
    </div>
    <div class="col-md-4">
    	<center><h3><%= time_ago_in_words(@user.created_at.to_time) %><br>
    	<b><small>Age</small></b></h3></center>
    </div>
	</div>
	<hr>


	<center><h3>Spaces</h3></center>
	<div class="list-group">
        <% if @user.spaces.count == 0 %>
        <center> You don't have any spaces yet </center>
        <% end %>
        <% @user.spaces.each do |space| %>
        <%= link_to(space, :class => "list-group-item") do %>
      <h4 class="list-group-item-heading">
        <%= space.title %><span class="badge pull-right"><%= space.blocks.count %> blocks</span>
      </h4>
      <p class="list-group-item-text">
        <%= space.description %>
      </p>
      <% end %>
      <% end %>
</div>
</div>
</div>